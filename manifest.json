{
  "manifest_version": 2,

  "name": "Video Replay",
  "description": "This extension adds a loop function to html5 videos.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["loop.js"],
      "run_at": "document_end"
    }
  ]
}